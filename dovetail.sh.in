#!/bin/sh

readonly VERSION=@VERSION
readonly DOVETAIL_SHARE="${DOVETAIL_SHARE:-@DOVETAIL_SHARE}"

usage() {
    echo 'usage: dovetail [options]

options:
  -h  Show help message
  -v  Show version'
}

version() {
    echo "dovetail $VERSION

$(awesome --version)"
}

while getopts ':hv' opt; do
    case "$opt" in
        h) usage; exit ;;
        v) version; exit ;;
        *) usage >&2; exit 2
    esac
done

exec awesome --no-argb -s "$DOVETAIL_SHARE"/lua -c "$DOVETAIL_SHARE"/init.lua
